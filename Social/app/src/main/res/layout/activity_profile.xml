<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zeolite.social.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proReg"
            android:hint="RegNo"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/proName"
            android:layout_below="@+id/proReg"
            android:textSize="18sp"
            android:hint="Name"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/proLogout"
            android:layout_marginRight="15dp"
            android:id="@+id/proUpl"
            android:paddingTop="5dp"
            android:src="@drawable/upload1"/>
        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/logoout1"
            android:id="@+id/proLogout"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rel"
        android:layout_above="@+id/lin">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proLi"
            android:dividerHeight="2dp"
            android:divider="#BDBDBD"

            android:choiceMode="multipleChoice"></ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lin"
        android:weightSum="2"
       android:layout_alignParentBottom="true"
        >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#BDBDBD"
            >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/newsfeed1"
            android:id="@+id/proNews"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ppl1"
                android:layout_gravity="center"
               />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
