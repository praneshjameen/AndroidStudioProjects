<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.zeolite.post.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="QR code"
        android:id="@+id/result"
        android:gravity="center" android:textSize="25sp"/>


    <Button android:text="Scan QR Code"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:layout_gravity="center_horizontal"
        android:id="@+id/scan"
        android:onClick="Scann"
/>

</LinearLayout>
